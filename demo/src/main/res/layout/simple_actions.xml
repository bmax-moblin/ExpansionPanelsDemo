<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_save"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/expansion_panel_button_horizontal_margin"
        android:layout_marginLeft="@dimen/expansion_panel_button_horizontal_margin"
        android:layout_marginRight="@dimen/expansion_panel_button_horizontal_margin"
        android:layout_marginStart="@dimen/expansion_panel_button_horizontal_margin"
        android:text="@string/action_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_cancel"
        app:layout_constraintRight_toLeftOf="@+id/btn_save"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>